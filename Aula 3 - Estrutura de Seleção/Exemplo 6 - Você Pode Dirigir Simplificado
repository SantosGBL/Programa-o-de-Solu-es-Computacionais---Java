package com.mycompany.vocepodedirigir2;

import javax.swing.JOptionPane;

public class VocePodeDirigir2 {

    public static void main(String[] args) {
        int idade = Integer.parseInt(JOptionPane.showInputDialog("Informe a sua idade: "));
        
        String podeDirigir;
        podeDirigir = idade >= 18 ? "Sim, você pode dirigir" : "Não, você não pode dirigir por enquanto";
        JOptionPane.showMessageDialog(null, podeDirigir);
    }
}
