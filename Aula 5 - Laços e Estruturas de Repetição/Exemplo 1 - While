package com.mycompany.exemplowhileaula5;

import javax.swing.JOptionPane;

public class ExemploWhileAula5 {

    public static void main(String[] args) {
        double nota1, nota2;
        int contador = 1; // i ou j
        
        while(contador <= 5){// código que será programado
            nota1 = Double.parseDouble(JOptionPane.showInputDialog("Informe a primeira nota"));
            nota2 = Double.parseDouble(JOptionPane.showInputDialog("Informe a segundaa nota"));
            
            JOptionPane.showMessageDialog(null, "Sua média é de:" + (nota1 + nota2) / 2);
            
            contador++; // = contador = contador + 1
        }
    }
}
