package com.mycompany.primeiros10numerosnaturaisemordemreversa;

import javax.swing.JOptionPane;

public class Primeiros10NumerosNaturaisemOrdemReversa {

    public static void main(String[] args) {
         String resultado = "";
        
        for(int i = 9; i >= 0; i--){
            resultado += i + "\n";
                     
        /*int i = 9;
        while (i >= 0) {
            resultado += i + "\n";
            i--;
        }*/

        /*int i = 9;
        do{
            resultado += i + "\n";
            i--; 
        }while(i >= 0);*/

        }
        JOptionPane.showMessageDialog(null, "Os 10 primeiros números naturais em ordem reversa são: \n"+ resultado);

    }
}
